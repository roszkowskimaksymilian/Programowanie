            cout << i << endl;
            Sleep(500);
            system("cls");
            }

        srand( time( NULL ) );
char A[10];
    for( int i = 0; i < 10; i++ )
    {
        A[i] =(( rand() %( 'z' - 'a' ) ) + 'a' ); //WYLOSOWAÅ 10 LITER DO TABLICY
    }

            double x = GetTickCount();
            for( int i = 0; i < 10; i++ )
            {
            cout<<"\t"<<A[i]<<endl;
            do
            {
                cin>>zn;
            }
            while (zn!=A[i]);
                cout<<"\n";
                cout<<"OK\n";
            Sleep(500);
